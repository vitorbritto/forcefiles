#!/bin/bash

# ------------------------------------------------------------------------------
# | NPM Settings                                                               |
# ------------------------------------------------------------------------------

run_npm() {

    # Check for npm
    if type_exists "npm"; then

        # Install Global Packages
        e_header "Installing Global Packages"
        local NPM_GLOBAL_PKGS='gulp-cli ios-sim ios-deploy reactotron-cli ignite-cli react-native-cli create-react-native-app create-react-app detox-cli typeorm typescript'
        npm i -g "$NPM_GLOBAL_PKGS"
        e_success "Global Packages successfully installed!"

    else

        printf "\n"
        e_error "Error: npm not found."
        printf "Aborting...\n"
        exit

    fi

}