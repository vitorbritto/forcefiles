#!/bin/bash

# ------------------------------------------------------------------------------
# | Install applications                                                       |
# ------------------------------------------------------------------------------

run_apps() {

    # Install apps
    e_header "Installing Applications"

    brew cask install apache-couchdb firefox psequel spotify xamarin-studio appcleaner fluid imageoptim sequel-pro thunderbird google-adwords-editor ionic-lab sketch tomighty axure-rp-pro google-chrome macvim sketch-toolbox slack visual-studio-code dropbox google-drive messenger skype wercker filezilla google-hangouts mysqlworkbench sourcetree xamarin-android-player virtualbox vagrant mogotron teamviewer

    e_success "Apps successfully installed!"

}
