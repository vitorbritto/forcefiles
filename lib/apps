#!/bin/bash

# ------------------------------------------------------------------------------
# | Install applications                                                       |
# ------------------------------------------------------------------------------

run_apps() {

    # Install apps
    e_header "Installing Applications"

    brew cask install apache-couchdb firefox psequel spotify appcleaner imageoptim thunderbird google-adwords-editor ionic-lab sketch tomighty google-chrome macvim sketch-toolbox slack visual-studio-code dropbox google-drive messenger skype wercker filezilla google-hangouts mysqlworkbench sourcetree virtualbox vagrant docker fontprep glueprint shuttle spectacle genymotion android-file-transfer postman

    e_success "Apps successfully installed!"

    e_info "--------------------------------------------------------------------------"
    e_info "Remember to install:"
    e_info "Wunderlist, MeisterTask, Adobe Family and Postman out of this box!"
    e_info "--------------------------------------------------------------------------"

}
