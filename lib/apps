#!/bin/bash

# ------------------------------------------------------------------------------
# | Install applications                                                       |
# ------------------------------------------------------------------------------

run_apps() {

    # Install apps
    e_header "Installing Applications"

    brew cask install apache-couchdb firefox psequel spotify appcleaner fluid imageoptim thunderbird google-adwords-editor ionic-lab sketch tomighty google-chrome macvim sketch-toolbox slack visual-studio-code dropbox google-drive messenger skype wercker filezilla google-hangouts mysqlworkbench sourcetree virtualbox vagrant robomongo gitscout coconutbattery docker fontprep glueprint numi shuttle spectacle

    e_success "Apps successfully installed!"

    e_info "--------------------------------------------------------------------------"
    e_info "Remember to install:"
    e_info "Wunderlist, MeisterTask, Adobe Family and Postman out of this box!"
    e_info "--------------------------------------------------------------------------"

}
