#!/bin/bash

# ------------------------------------------------------------------------------
# | Install applications                                                       |
# ------------------------------------------------------------------------------

run_apps() {

    # Install apps
    e_header "Installing Applications"

    brew cask install appcleaner firefox sublime-text macvim filezilla imageoptim dropbox skype feeds sourcetree google-drive google-chrome axure-rp-pro sequel-pro spotify virtualbox vagrant sketch slack mogotron thunderbird unrarx psequel apache-couchdb gitter fluid trello-x wercker atom teamviewer

    e_success "Apps successfully installed!"

}
