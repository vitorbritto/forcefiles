#!/bin/bash

# ------------------------------------------------------------------------------
# | Install gems                                                               |
# ------------------------------------------------------------------------------

run_gems() {

    # Check for Homebrew
    if type_exists "gem"; then

        # Use the latest version of gem
        e_header "Updating gem"
        gem update --system
        e_success "Done"

        # Upgrade any already-installed gem
        e_header "Updating any installed gem"
        gem update
        e_success "Done"


        # Install gems
        e_header "Installing Gems"
        
        sudo su 
        sudo gem install -n /usr/local/bin sass compass haml slim jekyll bundler capistrano sinatra rack puma homesick capybara rspec rails showterm access_lint teamocil tmuxinator uglifier bourbon cocoapods coffee-script commander data_mapper httpclient i18n json kramdown liquid mail minitest mongo mongodb nokogiri pygments.rb rake rdoc redcarpet scss_lint sdoc shotgun sprockets sqlite3 thin thor turbolinks

        e_success "Gems successfully installed!"

    else

        printf "\n"
        e_error "Error: gem not found."
        printf "Aborting...\n"
        exit

    fi

}
